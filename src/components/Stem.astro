<style>
  :root {
    --stemBlueBlur: rgb(3, 31, 75, 0.1);
    --stemBlue: #031f4b;
    --stemOrange: #ff7733;
    --elephant: #09383e;
    --tiber: #0f0844;
    --white: #fff;
  }
  .wrapper {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  .content__wrapper {
    width: 100%;
    height: 100%;
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ellipses-container {
    width: 100%;
    height: 100%;
    border-radius: 50%;
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .greeting {
    width: 100%;
    text-transform: uppercase;
    font-size: 2.2rem;
    font-weight: 400;
    opacity: 0.6;
    display: flex;
    align-items: center;
    justify-content: space-evenly;
    z-index: 2;
  }

  .greeting span,
  .greeting p {
    cursor: pointer;
    transition: transform 0.3s ease;
  }

  .greeting span:hover,
  .greeting p:hover {
    transform: scale(1.5);
  }

  .greeting span {
    color: var(--stemBlue);
  }
  .greeting p {
    color: var(--stemOrange);
  }
  .ellipses {
    border-radius: 50%;
    position: absolute;
    top: 0px;
    border-style: solid;
  }

  .ellipses__outer--thin {
    width: 100%;
    height: 100%;
    border-width: 1px;
    border-color: var(--stemBlueBlur);
    animation: ellipsesOrbit 15s ease-in-out infinite;
  }

  .ellipses__outer--thick {
    width: 99.5%;
    height: 99.5%;
    border-color: var(--stemBlue) transparent;
    border-width: 2px;
    transform: rotate(-45deg);
    animation: ellipsesRotate 15s ease-in-out infinite;
  }

  .ellipses__orbit {
    width: 10%;
    height: 10%;
    border-width: 2px;
    border-color: var(--stemOrange);
    top: 0;
    right: 66.5%;
  }

  .ellipses__orbit:before {
    content: '';
    width: 20%;
    height: 20%;
    border-radius: 50%;
    display: inline-block;
    background-color: var(--stemBlue);
    margin: 0 auto;
    left: 0;
    right: 0;
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
  }

  @keyframes ellipsesRotate {
    0% {
      transform: rotate(-45deg);
    }

    100% {
      transform: rotate(-405deg);
    }
  }

  @keyframes ellipsesOrbit {
    0% {
      transform: rotate(0);
    }

    100% {
      transform: rotate(360deg);
    }
  }
</style>
